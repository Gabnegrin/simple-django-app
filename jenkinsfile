pipeline {
    agent {
        docker {
            image 'docker/compose:latest'
            args '-v $WORKSPACE:/app'
        }
    }

    stages {
        stage('Clonar el cool') {
            steps {
                git 'https://github.com/Gabnegrin/simple-django-app'
            }
        }

        stage('Instalar el pylint') {
            steps {
                sh 'pip install pylint'
                sh 'pylint /app'
            }
        }

        stage('Levantar aplicacion') {
            steps {
                dir('/app') {
                    sh 'docker-compose up --build -d'
                }
            }
        }
    }

    post {
        always {
            echo 'Terminado'
            sh 'docker-compose down'
        }
        success {
            echo 'Funciona... aparentemente'
        }
        failure {
            echo 'Toca re hacer'
        }
    }
}
